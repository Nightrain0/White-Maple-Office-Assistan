page {
  background-color: #f7f8fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部栏 */
.top-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.add-box {
  background: #f0f0f0;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}

.add-box .icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.stats {
  font-size: 26rpx;
  color: #888;
}

/* 列表区 */
.list-area {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.list-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #eee;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.detail {
  font-size: 22rpx;
  color: #999;
}

.status {
  width: 120rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.status-dot.gray { background: #ddd; }

.status-text {
  font-size: 22rpx;
  color: #438edb;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: transparent;
  color: #ccc;
  text-align: center;
  line-height: 40rpx;
  font-size: 36rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 10rpx;
}

/* 设置区 */
.settings-panel {
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.setting-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.setting-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 240rpx;
}

.input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #333;
}

.tip-row {
  font-size: 22rpx;
  color: #ff9800;
  margin-top: 10rpx;
  text-align: right;
}

/* 底部按钮 */
.footer {
  padding: 20rpx 30rpx 40rpx; /* 适配 iPhone X */
  background: #fff;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn.main {
  background: #ff9800; /* 橙色主题 */
  color: #fff;
}

.btn.sub {
  background: #438edb;
  color: #fff;
}