page { 
  background: #2c2c2c; 
  height: 100vh; 
  display: flex; 
  flex-direction: column; 
}

.container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
}

.preview-box {
  flex: 1;
  margin: 20rpx;
  border-radius: 12rpx;
  /* 这里的 width auto 是为了适应不同布局，height 由 flex 撑开 */
  width: auto;
  overflow: hidden; 
  box-shadow: 0 0 20rpx rgba(0,0,0,0.5);
  transition: background-color 0.3s;
}

/* 核心布局容器 */
.canvas-mock {
  box-sizing: border-box;
  min-height: 100%;
}

/* --- 通用 Wrapper --- */
.img-wrapper {
  position: relative;
  overflow: hidden; 
}

/* --- 1. 纵向布局 --- */
.layout-vertical {
  display: flex;
  flex-direction: column;
  width: 100%; 
}
.layout-vertical .img-wrapper,
.layout-vertical .img-item,
.layout-vertical .add-btn {
  width: 100%;
  height: auto;
  display: block;
}
.layout-vertical .add-btn {
  height: 150rpx; 
}

/* --- 2. 横向布局 (修复版) --- */
.scroll-h {
  white-space: nowrap; 
}

.layout-horizontal {
  display: inline-block;
  min-width: 100%;
  /* 【关键修复】强制高度撑满，防止被压缩 */
  height: 100%; 
  white-space: nowrap;
  /* 【关键修复】顶部对齐，防止基线对齐导致的下沉 */
  vertical-align: top; 
}

.layout-horizontal .inline-wrapper {
  display: inline-block;
  /* 预览高度固定，宽度自适应 */
  height: 100%; 
  max-height: 500rpx; /* 限制最大高度，防止撑破屏幕 */
  width: auto;
  /* 【关键修复】消除 inline-block 间隙和下沉 */
  vertical-align: top; 
  position: relative;
  margin-right: 0; /* 间距由 gap style 控制 */
}

.layout-horizontal .img-item {
  height: 100%;
  width: auto; /* 配合 heightFix */
  display: block;
}

.layout-horizontal .add-btn {
  width: 200rpx; /* 横向添加按钮宽度 */
  height: 100%;
  max-height: 500rpx;
}

/* --- 3. 宫格布局 --- */
.layout-grid {
  display: grid;
  width: 100%; 
  align-content: start; 
}

.layout-grid .img-wrapper {
  width: 100%;
  position: relative;
}

.layout-grid .img-item {
  position: absolute;
  top: 0; left: 0;
  width: 100%; 
  height: 100%;
}

/* --- 按钮样式 --- */
.add-btn {
  background: rgba(255,255,255,0.1); /* 稍微亮一点 */
  border: 2rpx dashed #999;
  box-sizing: border-box; 
  display: flex; 
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}
/* inline-block 下的 flex 修复 */
.layout-horizontal .add-btn {
  display: inline-flex; 
}

.del-btn {
  position: absolute;
  top: 6rpx; right: 6rpx;
  background: rgba(255,0,0,0.8);
  color: #fff;
  width: 40rpx; height: 40rpx;
  text-align: center;
  line-height: 38rpx;
  border-radius: 50%;
  font-size: 28rpx;
  z-index: 10;
}

/* 控制面板 */
.controls {
  background: #fff;
  padding: 30rpx;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 10;
}

.tabs {
  display: flex;
  background: #f0f0f0;
  border-radius: 16rpx;
  padding: 6rpx;
  margin-bottom: 20rpx;
}
.tab {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  padding: 14rpx 0;
  border-radius: 12rpx;
  color: #666;
  transition: all 0.2s;
}
.tab.active {
  background: #fff;
  color: #333;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.slider-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}
.value-tip {
  font-size: 20rpx;
  color: #999;
  width: 60rpx;
  text-align: right;
}
.slider {
  flex: 1;
  margin: 0 10rpx;
}

.color-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.colors {
  flex: 1;
  display: flex;
  gap: 20rpx;
  padding-left: 20rpx;
}
.color-dot {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  box-sizing: border-box;
}
.color-dot.active {
  border: 4rpx solid #438edb !important;
  transform: scale(1.1);
}

.btn-main {
  background: #333;
  color: #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
}