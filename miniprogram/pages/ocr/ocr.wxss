page { background: #f7f8fa; height: 100vh; display: flex; flex-direction: column; }
.container { flex: 1; padding: 30rpx; display: flex; flex-direction: column; }

/* 模式选择 */
.mode-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.mode-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.picker-wrap {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #438edb;
  margin-right: 10rpx;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

/* 图片区域 */
.image-box {
  height: 360rpx; /* 稍微调小一点给上面留空间 */
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ddd;
  overflow: hidden;
  position: relative;
}
.img { width: 100%; height: 100%; }
.placeholder { display: flex; flex-direction: column; align-items: center; color: #999; }
.icon { font-size: 60rpx; margin-bottom: 10rpx; }

/* 结果区域 */
.result-box {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  min-height: 0; /* 允许flex收缩 */
}
.bar { display: flex; justify-content: space-between; margin-bottom: 20rpx; }
.label { font-weight: bold; color: #333; }
.btn-copy { color: #f5222d; font-size: 28rpx; padding: 0 10rpx; }

.text-area {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.btn-main { background: #f5222d; color: #fff; border-radius: 50rpx; width: 100%; }