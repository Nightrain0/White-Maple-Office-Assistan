page { background: #f0f0f0; padding-bottom: 50rpx; }
.container { padding: 30rpx; }
.preview-area {
  width: 100%;
  min-height: 500rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.canvas-view { width: 100%; height: 500rpx; } /* 仅用于预览，高度固定 */
.placeholder { text-align: center; color: #999; }
.icon { font-size: 60rpx; display: block; margin-bottom: 20rpx; }

.controls { background: #fff; padding: 30rpx; border-radius: 16rpx; }
.row { display: flex; align-items: center; margin-bottom: 30rpx; }
.row text { width: 140rpx; font-size: 28rpx; color: #333; }
.input { flex: 1; background: #f5f5f5; padding: 16rpx; border-radius: 8rpx; }
.slider { flex: 1; }

.btn-row { justify-content: space-between; gap: 20rpx; margin-top: 40rpx; }
.btn { flex: 1; font-size: 28rpx; border-radius: 40rpx; }
.main { background: #722ed1; color: #fff; }
.sub { background: #ebf5ff; color: #722ed1; }