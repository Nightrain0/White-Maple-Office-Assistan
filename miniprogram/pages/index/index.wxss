page {
  background-color: #f7f8fa;
  font-family: -apple-system, sans-serif;
}

.container {
  padding: 40rpx;
  padding-bottom: 80rpx;
  /* 增加底部留白 */
}

.header {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
}

/* 新增：标题行布局 */
.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  /* margin-bottom 移交给了 title-row 控制 */
}

/* 新增：清除缓存按钮样式 */
.clear-btn {
  background: #ffffff;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #ddd;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.clear-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.app-desc {
  font-size: 28rpx;
  color: #888;
}

.grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  transition: transform 0.1s;
}

.card:active {
  transform: scale(0.98);
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.bg-blue { background-color: #ebf5ff; }
.bg-green { background-color: #e6f9f0; }
.bg-orange { background-color: #fff8e6; }
.bg-gray { background-color: #f0f0f0; }
.bg-purple { background-color: #f3e6ff; color: #722ed1; }
.bg-cyan { background-color: #e6fffb; color: #13c2c2; }
.bg-red { background-color: #fff1f0; color: #f5222d; }

.card-icon {
  font-size: 48rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
}