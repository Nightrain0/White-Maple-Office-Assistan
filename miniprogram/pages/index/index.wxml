<view class="container">
  <view class="header">
    <text class="app-title">白枫办公助手</text>
    <text class="app-desc">您的随身办公效率工具箱</text>
  </view>

  <view class="grid">
    <!-- 工具 1: 证件照 -->
    <view class="card" bindtap="navTo" data-page="idphoto">
      <view class="icon-box bg-blue">
        <text class="card-icon">📷</text>
      </view>
      <view class="card-info">
        <text class="card-title">智能证件照</text>
        <text class="card-desc">自动抠图、换底色、改尺寸</text>
      </view>
    </view>

    <!-- 工具 2: 图片压缩 -->
    <view class="card" bindtap="navTo" data-page="compress">
      <view class="icon-box bg-green">
        <text class="card-icon">📉</text>
      </view>
      <view class="card-info">
        <text class="card-title">单图压缩/改尺寸</text>
        <text class="card-desc">精细调整、前后对比</text>
      </view>
    </view>

    <!-- 工具 3: 批量处理 (新增) -->
    <view class="card" bindtap="navTo" data-page="batch">
      <view class="icon-box bg-orange">
        <text class="card-icon">📚</text>
      </view>
      <view class="card-info">
        <text class="card-title">批量压缩</text>
        <text class="card-desc">多图统一处理、一键保存</text>
      </view>
    </view>

    <!-- 更多占位 -->
    <view class="card coming-soon">
      <view class="icon-box bg-gray">
        <text class="card-icon">➕</text>
      </view>
      <view class="card-info">
        <text class="card-title">更多功能</text>
        <text class="card-desc">敬请期待...</text>
      </view>
    </view>
  </view>
</view>