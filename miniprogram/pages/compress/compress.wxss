page {
  background-color: #f7f8fa;
  padding-bottom: 50rpx;
}

.container {
  padding: 30rpx;
}

.preview-area {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.main-img {
  width: 100%;
  height: 100%;
}

.placeholder .icon {
  font-size: 60rpx;
  color: #ccc;
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}

.placeholder .text {
  font-size: 28rpx;
  color: #999;
}

.info-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  text-align: center;
}

.settings-panel {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.setting-item {
  margin-bottom: 40rpx;
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.input-box {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.size-inputs {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.input-box.small {
  flex: 1;
  text-align: center;
}

.tip {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.btn-compress {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-header {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.result-info {
  width: 100%;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.compare-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.old { color: #999; text-decoration: line-through; }
.new { color: #07c160; font-weight: bold; }
.arrow { color: #ccc; }

.result-img {
  width: 300rpx;
  height: 300rpx;
  background: #eee;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.modal-actions {
  display: flex;
  width: 100%;
  gap: 20rpx;
}

.btn-secondary, .btn-primary {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  text-align: center;
}

.btn-secondary {
  background: #f0f0f0;
  color: #666;
}

.btn-primary {
  background: #438edb;
  color: #fff;
}