page {
  background-color: #f7f8fa;
  font-family: -apple-system, sans-serif;
  padding-bottom: 50rpx;
}

.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 预览区 - 动态大小 */
.preview-box {
  background-color: #e0e0e0; /* 默认灰色背景，方便看白底 */
  border-radius: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-bottom: 30rpx;
  border: 2rpx dashed #ccc;
  transition: all 0.3s ease;
  /* 默认大小，会被JS覆盖 */
  width: 300rpx; 
  height: 400rpx;
}

.photo-img {
  width: 100%;
  height: 100%;
}

.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  font-size: 80rpx;
  color: #999;
}

.tip {
  font-size: 28rpx;
  color: #666;
}

/* 通用控制面板 */
.control-panel {
  width: 100%;
  background: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 尺寸滚动列表 */
.size-scroll {
  width: 100%;
  white-space: nowrap;
}

.size-list {
  display: flex;
}

.size-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-right: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.size-item.active {
  background-color: #ebf5ff;
  border-color: #438edb;
  color: #438edb;
}

.size-name {
  font-size: 28rpx;
  font-weight: 500;
}

.size-desc {
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
}

.size-item.active .size-desc {
  color: #438edb; /* 选中时文字变蓝 */
}


/* 颜色选择 */
.colors {
  display: flex;
  justify-content: space-around;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.color-item.active {
  background-color: #ebf5ff;
  border-color: #438edb;
}

.circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
}

.red { background-color: #d9001b; }
.blue { background-color: #438edb; }
.white { background-color: #ffffff; }

/* 按钮 */
.action-area {
  width: 100%;
  margin-top: 20rpx;
}

button {
  margin-bottom: 20rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
}

.btn-primary {
  background-color: #438edb;
  color: white;
}

.btn-secondary {
  background-color: white;
  color: #333;
  border: 2rpx solid #eee;
}